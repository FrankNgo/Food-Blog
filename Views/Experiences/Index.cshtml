@model IEnumerable<FoodBlog.Models.Experience>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Experiences</h2>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ExperienceId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ExperienceId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ExperienceId">Delete</a>
                </td>
            </tr>






        }

    </tbody>
</table>
<a asp-action="Create">Create New</a> |
@Html.ActionLink("Home", "Index", "Home")
